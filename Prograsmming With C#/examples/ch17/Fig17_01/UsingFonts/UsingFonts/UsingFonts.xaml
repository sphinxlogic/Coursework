<!-- Fig. 17.1: UsingFonts.xaml -->
<!-- Formatting fonts in XAML code. -->
<Window x:Class="UsingFonts.UsingFontsWindow"
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
   Title="UsingFonts" Height="120" Width="400">

   <StackPanel>
      <!-- make a font bold using the FontWeight -->
      <TextBlock FontFamily="Arial" FontSize="12" FontWeight="Bold">
         Arial 12 point bold.</TextBlock>

      <!-- if no font size is specified, default size is used -->
      <TextBlock FontFamily="Times New Roman">
         Times New Roman plain, default size.</TextBlock>

      <!-- specifying a different font size and using FontStyle -->
      <TextBlock FontFamily="Courier New" FontSize="16" 
         FontStyle="Italic" FontWeight="Bold">
         Courier New 16 point bold and italic.
      </TextBlock>

      <!-- using Overline and Baseline TextDecorations -->
      <TextBlock> 
         <TextBlock.TextDecorations>
            <TextDecoration Location="Overline" />
            <TextDecoration Location="Baseline" />
         </TextBlock.TextDecorations>
         Default font with overline and baseline.
      </TextBlock>

      <!-- using Strikethrough and Underline TextDecorations -->
      <TextBlock> 
         <TextBlock.TextDecorations>
            <TextDecoration Location="Strikethrough" />
            <TextDecoration Location="Underline" />
         </TextBlock.TextDecorations>
         Default font with strikethrough and underline.
      </TextBlock>
   </StackPanel>
</Window>

